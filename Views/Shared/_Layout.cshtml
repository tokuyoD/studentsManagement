@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authentication.Cookies
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - studentManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header class="p-3 mb-4 border-bottom">
        <nav class="container d-flex justify-content-between align-items-center">
            <div>
                <a asp-controller="Home" asp-action="Index" class="me-3 text-dark text-decoration-none">首頁</a>
                <a asp-controller="Home" asp-action="Privacy" class="me-3 text-dark text-decoration-none">Privacy</a>
                <a asp-controller="Home" asp-action="LearnaboutASPNET" class="me-3 text-dark text-decoration-none">Learn about ASP.NET</a>

                @if (HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated)
                {
                    var roles = HttpContextAccessor.HttpContext.User.Claims
                                 .Where(c => c.Type == System.Security.Claims.ClaimTypes.Role)
                                 .Select(c => c.Value);

                    if (roles.Contains("Student"))
                    {
                        <a asp-controller="Students" asp-action="Index" class="me-3 text-dark text-decoration-none">我的課程</a>
                    }
                    if (roles.Contains("Teacher"))
                    {
                        <a asp-controller="Students" asp-action="Index" class="me-3 text-dark text-decoration-none">學生列表</a>
                        <a asp-controller="Courses" asp-action="Manage" class="me-3 text-dark text-decoration-none">課程管理</a>
                    }
                    if (roles.Contains("Admin"))
                    {
                        <a asp-controller="Users" asp-action="Index" class="me-3 text-dark text-decoration-none">使用者管理</a>
                        <a asp-controller="Roles" asp-action="Index" class="me-3 text-dark text-decoration-none">角色管理</a>
                    }
                }
            </div>

            <div>
                @if (HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated)
                {
                    var userName = HttpContextAccessor.HttpContext.User.Identity.Name;
                    var roles = HttpContextAccessor.HttpContext.User.Claims
                                 .Where(c => c.Type == System.Security.Claims.ClaimTypes.Role)
                                 .Select(c => c.Value);

                    <span class="me-3">
                        使用者: <strong>@userName</strong> | 角色: <strong>@string.Join(", ", roles)</strong>
                    </span>

                    <form method="post" asp-controller="Account" asp-action="Logout" class="d-inline">
                        <button type="submit" class="btn btn-outline-secondary btn-sm">登出</button>
                    </form>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-sm">登入</a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-success btn-sm ms-2">註冊</a>
                }
            </div>
        </nav>
    </header>

    <div class="container">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            &copy; 2025 - studentManagement - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
